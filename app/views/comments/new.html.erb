<div class="comment-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add Comment</h1>
        <%= form_for @comment, url: topic_comments_path do |f| %>


          <div class="form-group">
            <%= f.label :description %> <%= f.text_area :description, class: 'form-control' %>
          </div>

          <%= f.hidden_field :user_id, value: @comment.user_id %>
          <%= f.hidden_field :topic_id, value: @comment.topic_id %>

          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>
